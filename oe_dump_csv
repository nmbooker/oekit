#! /usr/bin/env python

"""Dump records from an OpenERP model into CSV.
"""

import sys
import argparse

from oekit import csvdump
from oekit.clientfactory import OEProxyClientFactory
from ast import literal_eval
from oekit.script import OdooScript

class OEDumpCSV(OdooScript):
    def description(self):
        return "Dump the contents of an OpenERP model to CSV"

    def add_extra_arguments(self, parser):
        parser.add_argument('model_name', help='name of model e.g. res.partner')
        parser.add_argument('fields', nargs='+', help='fields you want')
        parser.add_argument('--ids-stdin', '-i', action='store_true', help='get only the ids from stdin')
        parser.add_argument('--query', help='Specify a search domain to restrict the records')

    def get_client_factory(self):
        return OEProxyClientFactory()

    def _main(self):
        extra_kwargs = {}
        if self.options.ids_stdin:
            extra_kwargs['ids'] = [int(line.strip()) for line in sys.stdin]
        if self.options.query:
            extra_kwargs['query'] = literal_eval(self.options.query)
        csvdump.dump_csv(self.oe, self.options.model_name, self.options.fields, outfile=sys.stdout, **extra_kwargs)

if __name__ == "__main__":
    OEDumpCSV().main()
        
        

