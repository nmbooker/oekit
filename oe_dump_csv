#! /usr/bin/env python

"""Dump records from an OpenERP model into CSV.
"""

import sys
import argparse

from oekit import csvdump
from oekit.clientfactory.oeproxy import OEProxyClientFactory
from oekit.config.env import EnvConfig
from oekit.config.argparse import ArgsConfig, add_url_arg, add_login_args
from oekit.config.chained import OEConfigChain

def main(options):
    """Main program."""
    factory = OEProxyClientFactory()
    config = OEConfigChain(configs=[ArgsConfig(options), EnvConfig()])
    oe = factory.connect(config)
    extra_kwargs = {}
    if options.ids_stdin:
        extra_kwargs['ids'] = [int(line.strip()) for line in sys.stdin]
    if options.query:
        extra_kwargs['query'] = eval(options.query, {}, {})
    csvdump.dump_csv(oe, options.model_name, options.fields, outfile=sys.stdout, **extra_kwargs)
    return

def get_options():
    """Get options for the script."""
    parser = argparse.ArgumentParser(
               description="Dump the contents of an OpenERP model to CSV",
             )
    # parser.add_argument() calls here
    add_login_args(parser)
    parser.add_argument('model_name', help='name of model e.g. res.partner')
    parser.add_argument('fields', nargs='+', help='fields you want')
    parser.add_argument('--ids-stdin', '-i', action='store_true', help='get only the ids from stdin')
    parser.add_argument('--query', help='Specify a search domain to restrict the records')
    options = parser.parse_args()
    # extra processing of options here
    return options

if __name__ == "__main__":
    main(get_options())



